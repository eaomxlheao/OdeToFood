@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
	ViewData["Title"] = "List";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>List</h1>
<form method="get">
	<div class="form-group">
		<div class="input-group">
			<input type="search" class="form-control"
				   asp-for="SearchTerm" />
			<span class="input-group-btn">
				<button class="btn btn-default">
					<i class="fas fa-search"></i>
				</button>
			</span>
		</div>
	</div>
</form>
<table class="table">
	@foreach (var restaurant in Model.Restaurants)
	{
		<tr>
			<td>@restaurant.Name</td>
			<td>@restaurant.Location</td>
			<td>@restaurant.Cuisine</td>
			<td>
				<a class="btn btn-lg" asp-page="./Detail" asp-route-id="@restaurant.Id">
					<i class="fas fa-search-location"></i>
				</a>
				<a class="btn btn-lg" asp-page="./Edit" asp-route-id="@restaurant.Id">
					<i class="fas fa-edit"></i>
				</a>
				<a class="btn btn-lg" asp-page="./Delete" asp-route-id="@restaurant.Id">
					<i class="fas fa-trash"></i>
				</a>
			</td>
		</tr>
	}
</table>
<a asp-page=".\Edit" class="btn btn-primary">Add New</a>


@section footer{
	<div>EduArdO</div>
}
